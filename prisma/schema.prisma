generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  points    Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Order Order[]
}

model Coffee {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  size        String
  category    CoffeeCategory
  ingredients String
  image_url   String
  available   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Food {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  category    String          // "sweet" or "savory"
  ingredients String          
  filling     String?         
  image_url   String
  available   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Drinks {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  description String
  size        String
  category    String      // Ex: "water", "soda", "juice"
  ingredients String?
  image_url   String
  available   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  totalPrice  Float
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id])
  OrderItem OrderItens[]
}

model OrderItens {
  id          Int      @id @default(autoincrement())
  orderId     Int
  productId   Int
  productType String   // "Coffee", "Food", "Drinks"
  quantity    Int      @default(1)
  price       Float

  order Order @relation(fields: [orderId], references: [id])
}

enum CoffeeCategory {
  Quente
  Gelado
}